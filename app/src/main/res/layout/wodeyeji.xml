<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui_color">

    <RelativeLayout
        android:id="@+id/wodeyeji_topbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_color">
        <TextView
            android:id="@+id/wodeyeji_top_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="我的业绩"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/fanhui"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fanhui"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />
    </RelativeLayout>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="61dp">
        <ImageView
            android:id="@+id/wodeyeji_dengjiimg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/wodedengji"/>
        <TextView
            android:id="@+id/wodeyeji_dengji"
            android:layout_toRightOf="@+id/wodeyeji_dengjiimg"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black_color"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="工匠一级"/>

        <ProgressBar
            android:progressDrawable="@drawable/dengji"
            android:id="@+id/jingyanzhi"
            android:progress="0"
            android:max="100"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="42dp"
            android:layout_width="173dp"
            android:layout_height="12dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/wodeyeji_guize"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="31dp">
        <TextView
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:textColor="@color/black_color"
            android:text="升级规则"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:layout_width="4.5dp"
            android:layout_height="12dp"
            android:src="@drawable/jianjin"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="22dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="31dp">
        <View
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/divider"></View>
        <TextView
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:textColor="@color/black_color"
            android:text="我的评分"/>
        <RatingBar
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:layout_centerVertical="true"
            android:isIndicator="true"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1"
            android:id="@+id/wodeyeji_xingji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/wodeyeji_canyurenwu"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="31dp">
        <TextView
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:textColor="@color/black_color"
            android:text="参与任务"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:layout_width="4.5dp"
            android:layout_height="12dp"
            android:src="@drawable/jianjin"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />
    </RelativeLayout>

</LinearLayout>