<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/zhanghao_topbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_color">
        <TextView
            android:id="@+id/zhanghao_top_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="18sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/zhanghao_topbar"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hui_color">

        <View
            android:layout_marginTop="21dp"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/divider"></View>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <ImageView
                android:id="@+id/zhuce_shoujihaoimg"
                android:layout_marginLeft="36dp"
                android:layout_centerVertical="true"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:src="@drawable/denglu_shouji"/>
            <EditText
                android:id="@+id/zhuce_shoujihao"
                android:layout_toRightOf="@+id/zhuce_shoujihaoimg"
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black_color"
                android:hint="请输入手机号"
                android:background="#ffffff"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/divider"></View>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <ImageView
                android:id="@+id/zhuce_mimaimg"
                android:layout_marginLeft="36dp"
                android:layout_centerVertical="true"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:src="@drawable/denglu_mima"/>
            <EditText
                android:id="@+id/zhuce_mima"
                android:layout_toRightOf="@+id/zhuce_mimaimg"
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black_color"
                android:hint="请输入密码"
                android:background="#ffffff"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/divider"></View>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <ImageView
                android:id="@+id/zhuce_querenimg"
                android:layout_marginLeft="36dp"
                android:layout_centerVertical="true"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:src="@drawable/denglu_mima"/>
            <EditText
                android:id="@+id/zhuce_queren"
                android:layout_toRightOf="@+id/zhuce_querenimg"
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black_color"
                android:hint="请确认密码"
                android:background="#ffffff"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/divider"></View>
        <View
            android:layout_marginTop="21dp"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/divider"></View>

        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <TextView
                android:id="@+id/zhuce_yanzheng_"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black_color"
                android:text="验证码"
                android:layout_marginLeft="18dp"/>
            <View
                android:id="@+id/zhuce_divider_"
                android:background="@color/divider"
                android:layout_toRightOf="@+id/zhuce_yanzheng_"
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"></View>
            <EditText
                android:layout_centerVertical="true"
                android:textSize="15dp"
                android:id="@+id/zhuce_yanzhengma"
                android:layout_toRightOf="@+id/zhuce_divider_"
                android:layout_marginLeft="18dp"
                android:hint="请输入验证码"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#ffffff"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/zhuce_yanzheng"
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:id="@+id/huoquimg" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/divider"></View>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <ImageView
                android:id="@+id/zhuce_dizhiimg"
                android:layout_marginLeft="36dp"
                android:layout_centerVertical="true"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:src="@drawable/zhuce_dizhi"/>
            <EditText
                android:id="@+id/zhuce_dizhi"
                android:layout_toRightOf="@+id/zhuce_dizhiimg"
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black_color"
                android:hint="请输入详细地址"
                android:background="#ffffff"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/divider"></View>
        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:id="@+id/zhuce_shenfen"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_marginLeft="40dp"
                    android:id="@+id/zhuce_gongjiang"
                    android:text="我是工匠"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:layout_marginLeft="40dp"
                    android:id="@+id/zhuce_kehu"
                    android:text="我是客户"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>
            </RadioGroup>
        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/zhanghao_button"
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="41dp">
        <TextView
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注   册"/>
    </RelativeLayout>

</RelativeLayout>