<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/zhanghao_topbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_color">
        <TextView
            android:id="@+id/zhanghao_top_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="#ffffff"
            android:textSize="18sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/zhanghao_topbar"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hui_color">

        <View
            android:layout_marginTop="21dp"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/divider"></View>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <ImageView
                android:id="@+id/zhuce_shoujihaoimg"
                android:layout_marginLeft="36dp"
                android:layout_centerVertical="true"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:src="@drawable/denglu_shouji"/>
            <EditText
                android:id="@+id/zhuce_shoujihao"
                android:layout_toRightOf="@+id/zhuce_shoujihaoimg"
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black_color"
                android:hint="请输入手机号"
                android:background="#ffffff"
                android:layout_centerVertical="true"
                android:numeric="integer"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/divider"></View>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <ImageView
                android:id="@+id/zhuce_mimaimg"
                android:layout_marginLeft="36dp"
                android:layout_centerVertical="true"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:src="@drawable/denglu_mima"/>
            <EditText
                android:id="@+id/zhuce_mima"
                android:layout_toRightOf="@+id/zhuce_mimaimg"
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black_color"
                android:hint="请输入旧密码"
                android:background="#ffffff"
                android:layout_centerVertical="true"
                android:password="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/divider"></View>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <ImageView
                android:id="@+id/zhuce_querenimg"
                android:layout_marginLeft="36dp"
                android:layout_centerVertical="true"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:src="@drawable/denglu_mima"/>
            <EditText
                android:id="@+id/zhuce_queren"
                android:layout_toRightOf="@+id/zhuce_querenimg"
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black_color"
                android:hint="请输入新密码"
                android:background="#ffffff"
                android:layout_centerVertical="true"
                android:password="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/divider"></View>

    </LinearLayout>


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/zhanghao_button"
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="41dp">
        <TextView
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完   成"/>
    </RelativeLayout>
</RelativeLayout>