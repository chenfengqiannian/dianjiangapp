<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/wodezhanghu_topbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_color">
        <TextView
            android:id="@+id/zhanghu_top_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="我的账户"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/zhanghu_fanhui"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fanhui"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <ImageView
            android:id="@+id/wodezhanghu_img"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/zhanghuyue"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"/>
        <TextView
            android:layout_toRightOf="@+id/wodezhanghu_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:textSize="13sp"
            android:textColor="@color/black_color"
            android:text="账户余额"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/wodezhanghu_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:text="元"
            android:textColor="@color/black_color"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/wodezhanghu_yue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="@color/black_color"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/wodezhanghu_yuan"
            android:layout_marginRight="10dp"

            android:text="2333"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"></View>
    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/wodezhanghu_tixian"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现申请"
            android:textSize="12sp"
            android:textColor="@color/black_color"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:src="@drawable/jianjin"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"></View>

    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/wodezhanghu_daishoukuan"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="代收款"
            android:textSize="12sp"
            android:textColor="@color/black_color"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:src="@drawable/jianjin"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"></View>
    <View
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"></View>

    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/wodezhanghu_shouzhijilu"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收支记录"
            android:textSize="12sp"
            android:textColor="@color/black_color"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="10dp"
            android:layout_height="6dp"
            android:src="@drawable/xiala"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"></View>
    <ListView
        android:id="@+id/jilulist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/divider"
        android:dividerHeight="2px"
        android:visibility="invisible"></ListView>


</LinearLayout>