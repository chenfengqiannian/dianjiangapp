<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/fabu1_xinxi"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="33dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:textSize="15sp"
            android:text="工程信息"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/fabu1_str1"
        android:layout_below="@+id/fabu1_xinxi"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"
        ></View>

    <RelativeLayout
        android:layout_below="@+id/fabu1_str1"
        android:id="@+id/fabu1_biaoti_"
        android:layout_width="match_parent"
        android:layout_height="27dp">
        <EditText
            android:id="@+id/fabu1_biaoti"
            android:background="#ffffff"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black_color"
            android:hint="请输入标题..."/>
    </RelativeLayout>

    <View
        android:layout_below="@+id/fabu1_biaoti_"
        android:id="@+id/fabu1_str2"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"
        ></View>

    <RelativeLayout
        android:layout_below="@+id/fabu1_str2"
        android:id="@+id/fabu1_miaoshu_"
        android:layout_width="match_parent"
        android:layout_height="122dp">
        <EditText
            android:id="@+id/fabu1_miaoshu"
            android:hint="请描述工程内容..."
            android:textColor="@color/black_color"
            android:textSize="12sp"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:gravity="top"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:layout_below="@+id/fabu1_miaoshu_"
        android:id="@+id/fabu1_str3"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"
        ></View>

    <RelativeLayout
        android:id="@+id/fabu1_tupian_"
        android:layout_below="@+id/fabu1_str3"
        android:layout_width="match_parent"
        android:layout_height="87dp">
        <ImageView
            android:id="@+id/xinxi_tupian1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"/>
        <ImageView
            android:id="@+id/xinxi_tupian2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/xinxi_tupian1"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:id="@+id/fabu1_tupian"
            android:editable="false"
            android:text="请选择图片上传"
            android:textColor="@color/texthui_color"
            android:textSize="12sp"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:gravity="top"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/img_option"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/tianjiatupian"/>
    </RelativeLayout>

    <View
        android:id="@+id/fabu1_str4"
        android:layout_below="@+id/fabu1_tupian_"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"
        ></View>

    <RelativeLayout
        android:layout_below="@+id/fabu1_str4"
        android:id="@+id/fabu1_diqu"
        android:layout_width="match_parent"
        android:layout_height="31dp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="请选择施工地区"
            android:textColor="#5b5b5b"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:src="@drawable/jianjin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>

    <View
        android:layout_below="@+id/fabu1_diqu"
        android:id="@+id/fabu1_str5"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"
        ></View>

    <RelativeLayout
        android:layout_below="@+id/fabu1_str5"
        android:id="@+id/fabu1_dizhi_"
        android:layout_width="match_parent"
        android:layout_height="27dp">
        <EditText
            android:id="@+id/fabu1_dizhi"
            android:hint="请输入详细地址..."
            android:textColor="@color/black_color"
            android:textSize="12sp"
            android:paddingLeft="12dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:layout_below="@+id/fabu1_dizhi_"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"
        ></View>
</RelativeLayout>