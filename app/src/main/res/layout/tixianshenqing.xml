<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/hui_color">
    <RelativeLayout
        android:id="@+id/tixianshenqing_topbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_color">
        <TextView
            android:id="@+id/tixianshenqing_top_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="提现申请"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/fanhui"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fanhui"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tixianshenqing_zhanghu"
        android:layout_below="@id/tixianshenqing_topbar"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="43dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:text="您的账户"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/black_color"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="18888888888"
            android:id="@+id/zhanghu" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tixianshenqing_yue"
        android:layout_below="@id/tixianshenqing_zhanghu"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="43dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:text="账户余额"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tixianshenqing_danwei"
            android:textColor="@color/black_color"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="元"/>

        <TextView
            android:id="@+id/tixianshenqing_num"
            android:layout_toLeftOf="@+id/tixianshenqing_danwei"
            android:layout_marginRight="6dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black_color"

            android:text="23333"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/tixianshenqing_yue"
        android:layout_marginTop="22dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="43dp">
        <View
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/divider"></View>
        <TextView
            android:layout_marginLeft="20dp"
            android:text="提现金额"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tixianshenqing_danwei2"
            android:textColor="@color/black_color"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="元"/>

        <EditText
            android:gravity="right"
            android:id="@+id/tixianshenqing_price"
            android:layout_toLeftOf="@+id/tixianshenqing_danwei2"
            android:layout_marginRight="6dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black_color"
            android:background="#ffffff"
            android:hint="在此输入提现金额"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/tixianshenqing_button"
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="41dp">
        <TextView
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请提现"/>
    </RelativeLayout>

</RelativeLayout>