<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui_color">

    <RelativeLayout
        android:id="@+id/fabu_topbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_color">
        <TextView
            android:id="@+id/fabu2_top_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="评  价"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageButton
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fanhui"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />
    </RelativeLayout>
    
    <EditText
        android:id="@+id/pingjia_text"
        android:layout_below="@id/fabu_topbar"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:hint="请对此次工程的工匠服务态度,工期进度,工程质量进行评价"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:gravity="top"
        android:textSize="15sp"/>
    <View
        android:layout_below="@+id/pingjia_text"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="2px"></View>
    
    <RelativeLayout
        android:layout_below="@+id/pingjia_text"
        android:layout_marginTop="23dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="102dp">

        <View
            android:background="@color/divider"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="2px"></View>
        <TextView
            android:id="@+id/text"
            android:text="XXXXXXX"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/texthui_color"
            android:textSize="15sp"/>
        
        <ImageView
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/tianjiatupian"/>

        <View
            android:background="@color/divider"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="2px"></View>
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/fabu_xiayibu"
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="41dp">
        <TextView
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交评价"/>
    </RelativeLayout>

</RelativeLayout>