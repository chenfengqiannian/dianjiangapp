<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/dianjiang_topbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_color">
        <TextView
            android:id="@+id/dianjiang_top_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="订单确认"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageButton
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fanhui"
            android:scaleType="fitXY"
            android:id="@+id/dingdan_fanhui" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/dingdan1"
        android:layout_below="@+id/dianjiang_topbar"
        android:layout_width="match_parent"
        android:layout_height="37dp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:textSize="13sp"
            android:text="支付金额"
            android:layout_marginLeft="17dp"
            android:id="@+id/nametext" />
        <TextView
            android:id="@+id/danwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="元"
            android:layout_marginRight="9dp"
            android:textColor="@color/black_color"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/jine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/danwei"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:textColor="@color/black_color"
            android:textSize="13sp"/>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/divider"></View>
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/dingdan2"
        android:layout_below="@+id/dingdan1"
        android:layout_width="match_parent"
        android:layout_height="37dp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:textSize="13sp"
            android:text="总计:"
            android:layout_marginLeft="17dp"
            android:id="@+id/total" />
        <TextView
            android:id="@+id/danwei2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="元"
            android:layout_marginRight="9dp"
            android:textColor="@color/black_color"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/jine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/danwei2"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:textColor="@color/black_color"
            android:textSize="13sp"/>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/divider"></View>
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/dingdan3"
        android:layout_below="@+id/dingdan2"
        android:layout_width="match_parent"
        android:layout_height="37dp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:textSize="13sp"
            android:text="手机号"
            android:layout_marginLeft="17dp"
            android:id="@+id/number" />
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:textColor="@color/black_color"
            android:textSize="13sp"/>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/divider"></View>
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/zhifu"
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="41dp">
        <TextView
            android:id="@+id/yaoqing_text"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认支付"/>
    </RelativeLayout>

</RelativeLayout>