<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui_color">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/main_color">
        
        <ImageView
            android:id="@+id/shezhi"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:layout_marginRight="12dp"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:src="@drawable/shezhi"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_marginLeft="68dp"
            android:layout_centerVertical="true"
            android:id="@+id/touxiang"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@color/main_color"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/huanying"
            android:layout_toRightOf="@+id/touxiang"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="47dp"
            android:text="欢迎您,"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/nicheng"
            android:layout_alignBottom="@+id/huanying"
            android:layout_toRightOf="@+id/huanying"
            android:layout_marginLeft="6dp"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/shoujihao"
            android:layout_marginTop="72dp"
            android:layout_alignLeft="@+id/huanying"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </RelativeLayout>
    
    <TableLayout
        android:id="@+id/table1"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#ffffff">
        <TableRow>
            <RelativeLayout
                android:id="@+id/xinxi"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_width="0dp">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:id="@+id/xinxi_"
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:src="@drawable/geren"/>
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="个人信息"
                    android:textColor="#000000"
                    android:textSize="9sp"
                    />
                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/divider"></View>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/zhanghu"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_width="0dp">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:id="@+id/zhanghu_"
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:src="@drawable/zhanghu"/>
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="我的账户"
                    android:textColor="#000000"
                    android:textSize="9sp"
                    />
                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/divider"></View>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/fapiao"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_width="0dp">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:id="@+id/fapiao_"
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:src="@drawable/fapiao"/>
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="索要发票"
                    android:textColor="#000000"
                    android:textSize="9sp"
                    />
                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/divider"></View>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/chongzhi"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_width="0dp">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:id="@+id/chongzhi_"
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:src="@drawable/geren"/>
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="便捷充值"
                    android:textColor="#000000"
                    android:textSize="9sp"
                    />
            </RelativeLayout>
        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/string1"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"></View>

    <View
        android:id="@+id/string2"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"
        android:layout_marginTop="26dp"></View>


    <View
        android:id="@+id/string3"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"></View>

    <RelativeLayout
        android:id="@+id/gongjiang"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="#ffffff">
        <ImageView
            android:id="@+id/gongjiangimg"
            android:layout_width="17dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:src="@drawable/gongjiang" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="42dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工匠信息"
            android:textColor="@color/black_color"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:id="@+id/qianjin2"
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:src="@drawable/jianjin"/>
    </RelativeLayout>

    <View
        android:id="@+id/string4"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"></View>

    <View
        android:id="@+id/string5"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"
        android:layout_marginTop="19dp"></View>

    <RelativeLayout
        android:id="@+id/kefu"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="#ffffff">
        <ImageView
            android:id="@+id/kefuimg"
            android:layout_width="17dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:src="@drawable/kefu" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="42dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系客服"
            android:textColor="@color/black_color"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:id="@+id/qianjin3"
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:src="@drawable/jianjin"/>

    </RelativeLayout>

    <View
        android:id="@+id/string6"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"></View>

    <RelativeLayout
        android:id="@+id/yijian"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="#ffffff">
        <ImageView
            android:id="@+id/yijianimg"
            android:layout_width="17dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:src="@drawable/yijian" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="42dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textColor="@color/black_color"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:id="@+id/qianjin4"
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:src="@drawable/jianjin"/>
    </RelativeLayout>

    <View
        android:id="@+id/string7"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"></View>

    <View
        android:id="@+id/string8"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"
        android:layout_marginTop="19dp"></View>

    <RelativeLayout
        android:id="@+id/fenxiang"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="#ffffff">
        <ImageView
            android:id="@+id/fenxiangimg"
            android:layout_width="17dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:src="@drawable/fenxiang" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="42dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一键分享"
            android:textColor="@color/black_color"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:id="@+id/qianjin5"
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:src="@drawable/jianjin"/>
    </RelativeLayout>

    <View
        android:id="@+id/string9"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"></View>



</LinearLayout>