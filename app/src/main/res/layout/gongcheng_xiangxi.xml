    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"
        ></View>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="28dp">
        <TextView
            android:id="@+id/fabu3_shichang_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            android:textColor="@color/texthui_color"
            android:textSize="12sp"
            android:text="工程时长"/>

        <TextView
            android:id="@+id/fabu3_shichang"
            android:layout_alignBottom="@+id/fabu3_shichang_"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black_color"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"
        ></View>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="28dp">
        <TextView
            android:id="@+id/fabu3_choulao_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            android:textColor="@color/texthui_color"
            android:textSize="12sp"
            android:text="酬劳"/>

        <TextView
            android:id="@+id/fabu3_choulao"
            android:layout_alignBottom="@+id/fabu3_choulao_"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black_color"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_alignBottom="@+id/fabu3_choulao_"
            android:layout_toRightOf="@+id/fabu3_choulao"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:text="元"
            android:textSize="12sp"
            android:textColor="@color/black_color"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"
        ></View>
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="73dp">
        <TextView
            android:id="@+id/fabu3_beizhu_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/texthui_color"
            android:textSize="12sp"
            android:text="备注"/>

        <TextView
            android:id="@+id/fabu3_beizhu"
            android:layout_alignTop="@+id/fabu3_beizhu_"
