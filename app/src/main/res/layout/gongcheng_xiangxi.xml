            android:textColor="@color/black_color" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"
        ></View>

    <View
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"
        ></View>

    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/fabu3_jiebao"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="33dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:textSize="15sp"
            android:text="接包要求"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"
        ></View>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="28dp">
        <TextView
            android:id="@+id/fabu3_gongzhong_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            android:textColor="@color/texthui_color"
            android:textSize="12sp"
            android:text="工种"/>

        <TextView
            android:id="@+id/fabu3_gongzhong"
            android:layout_alignBottom="@+id/fabu3_gongzhong_"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black_color"

            android:text="XXXXXXXXXXXXXX"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider"
        ></View>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="73dp">
        <TextView
            android:id="@+id/fabu3_yaoqiu_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/texthui_color"
            android:textSize="12sp"
            android:text="接包要求"/>

